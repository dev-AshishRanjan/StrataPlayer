{
  "name": "strataplayer",
  "version": "1.0.5",
  "description": "A robust, secure, and production-grade video player built for the modern web.",
  "type": "module",
  "main": "./dist/strataplayer.umd.js",
  "module": "./dist/strataplayer.es.js",
  "types": "./dist/lib.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/strataplayer.es.js",
      "require": "./dist/strataplayer.umd.js",
      "types": "./dist/lib.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --mode lib && vite build --mode demo",
    "build:lib": "tsc && vite build --mode lib",
    "build:site": "tsc && vite build --mode demo",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "hls.js": ">=1.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.462.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "hls.js": "^1.5.1",
    "postcss": "^8.4.32",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.6.4",
    "wouter": "^3.0.0"
  }
}
