{
  "name": "strataplayer",
  "version": "1.0.2",
  "description": "A robust, secure, and production-grade video player built for the modern web.",
  "type": "module",
  "main": "./dist/strataplayer.umd.js",
  "module": "./dist/strataplayer.es.js",
  "types": "./dist/lib.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/strataplayer.es.js",
      "require": "./dist/strataplayer.umd.js",
      "types": "./dist/lib.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib",
    "build:lib": "tsc && vite build --mode lib",
    "build:site": "tsc && vite build --mode demo",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "hls.js": "^1.5.8",
    "lucide-react": "^0.474.0",
    "wouter": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
